<!DOCTYPE HTML>
<html>
	<head>
		<title>FOUND IT - Geocaching Jeux de Sophia 2016</title>
		<% include ./partials/head %>
	</head>
	<body class="homepage">

		<!-- Header Wrapper -->
			<div class="wrapper style1">
			
			<!-- Header -->
				<div id="header">
					<div class="container">
							
						<!-- Logo -->
							<h1><a href="/" id="logo">Géocaching</a></h1>
						
						<!-- Nav -->
							<nav id="nav">
								<ul>
									<li><a href="/">Accueil</a></li>
								</ul>
							</nav>
	
					</div>
				</div>
				
			</div>
		
		
		<!-- Section Two -->
			<div class="wrapper style3">
				<section class="container">
					<header class="major">
						<h2><%= nom %></h2>
					</header>
				<!--Start FoundIt form -->		                                                
			        <form method="post" action="/found">
			    		<!-- Date : <input type="date" name="date" id="date" value="" style="border: solid 1px #fff;" placeholder="Date" /> -->
