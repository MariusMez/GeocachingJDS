			    		<input type="text" name="message" id="message" value="" style="border: solid 1px #fff;" placeholder="Un petit message" />
						<input type="hidden" name="id" id="<%= id %>" value="<%= id %>" />
			    		<br><br><input type="submit" value="J'ai trouvé !" name="submit" class="button alt" id="submitButton" title="Clic ici pour envoyer la trouvaille" />
				
			    	</form>  				 
    			<!--End FoundIt form -->	
   				</section>
			</div>

		

	<!-- Footer -->
		<div id="footer">
					
		</div>

	</body>
